{% extends 'AppBundle::layout.html.twig' %}
{% import 'AppBundle::macros.html.twig' as macros %}

{% block body %}
<div class="container main">
    {% set camp = campaignlist.getCampaign() %}
    {% if camp is defined and camp %}
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:2rem; border-bottom:2px solid #eee; padding-bottom:1rem;">
            <div>
                <h1 style="margin:0;">Edit Campaign</h1>
                <div style="color:#666; font-size:1.1rem;">{{ camp.getName() }} <span class="text-muted">({{ camp.getCode() }})</span></div>
            </div>
            {% if camp.getCreator() %}
                <span style="background:#1976d2; color:#fff; padding:0.3rem 0.6rem; border-radius:6px; font-size:0.9rem; font-weight:600;">Creator: {{ camp.getCreator() }}</span> 
            {% endif %}
        </div>
        
        {{ include('AppBundle:Team:_campaign_form_fragment.html.twig') }}
        
    {% else %}
        <h3>Campaign Data Unavailable</h3>
        <div class="text-muted">The campaign linked to this entry is missing.</div> [cite: 2]
    {% endif %}
</div>
{% endblock %}